<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- ShoppingCart 클래스를 Spring Bean으로 설정 -->
	<bean id="shoppingCart" class="mylab.order.di.xml.ShoppingCart" />
	
	<!-- OrderService 클래스를 Spring Bean으로 설정 -->
    <bean id="OrderService" class="mylab.order.di.xml.OrderService">
        <property name="shoppingCart" ref="shoppingCart" />
    </bean>
	
	<!-- Product1 클래스를  Spring Bean으로 설정 Setter Injection 방식 -->
	<bean id="product1" class="mylab.order.di.xml.Product" scope="singleton">
		<property name="id" value="A001" />
		<property name="name" value="맥북" />
		<property name="price" value="10000" />
	</bean>
	
	<!-- Product2 클래스를  Spring Bean으로 설정 Constructor Injection 방식 -->
	<bean id="product2" class="mylab.order.di.xml.Product">
		<constructor-arg name="id" value="A002" />
		<constructor-arg name="name" value="스마트폰" />
		<constructor-arg name="price" value="8000" />
	</bean>

</beans>
